<h1>New Wiki</h1>
 
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for wikis</p>
    <ul>
      <li>Post sources for information on page.</li>
      <li>Do not post adult material.</li>
      <li>Upkeep wiki as needed.</li>
    </ul>
  </div>

  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <% if @wiki.errors.any? %>
        <% @wiki.errors.full_messages.each do |message| %>
          <ul style="list-style: none;" class="alert alert-danger">
            <li><%= message %></li>
          </ul>
        <% end %>
      <% end %>
    
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      
      <% if user_signed_in? && (current_user.admin? || current_user.premium?) %>
        <div class="form-group">
          <%= f.label :private, class: "checkbox pull-right" do %>
            <%= f.check_box :private, id: "private_wiki" %> Private Wiki
          <% end %>
        </div> 
      <% end %>
      
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
